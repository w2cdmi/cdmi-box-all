<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
		<resetJUL>true</resetJUL>
    </contextListener>
    
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}][isystem][%X{LogID}][%-5level][%C][%M,%L][%msg][%thread]%n</pattern>
		</encoder>
	</appender>

	<appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${catalina.base}/logs/isystem.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${catalina.base}/logs/isystem.%d{yyyy-MM-dd}-%i.log.zip</FileNamePattern> 
			<MaxHistory>90</MaxHistory> 
			<TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<MaxFileSize>300MB</MaxFileSize> 
			</TimeBasedFileNamingAndTriggeringPolicy>
  		</rollingPolicy>
  		<encoder>
  			<pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}][isystem][%X{LogID}][%-5level][%C][%M,%L][%msg][%thread]%n</pattern> 
  		</encoder>
	</appender>

	<!-- project default level -->
	<logger name="com.huawei.sharedrive.isystem" level="INFO" />
	<logger name="pw.cdmi.box" level="INFO" />

	<!--log4jdbc -->
	<logger name="jdbc.sqltiming" level="INFO"/>
	<logger name="org.quartz.impl.jdbcjobstore.JobStoreTX" level="ERROR" />
	
	<root level="INFO">
		<appender-ref ref="rollingFile" />
		
	</root>
</configuration>