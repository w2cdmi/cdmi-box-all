										</HorizontalLayout>
									</HorizontalLayout>
								</ListHeaderItem>

								<ListHeaderItem width="200">
									<HorizontalLayout mousechild="false" padding="20,0,2,0">
										<HorizontalLayout>
											<Label name="myFileSearch_listHeaderItemPath" text="路径" font="2" textcolor="#FF666666" align="left" />
										</HorizontalLayout>
										<Control />
									</HorizontalLayout>
								</ListHeaderItem>
