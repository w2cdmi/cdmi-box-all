                            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                <GradientStop Color="#FF71B3EA" Offset="1"/>
                                <GradientStop Color="#FF207CC8" Offset="0.05"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Border VerticalAlignment="Stretch" BorderThickness="0,0,1,0">
                            <Border.BorderBrush>
                                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
