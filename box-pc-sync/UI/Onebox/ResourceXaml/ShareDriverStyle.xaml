    <DataTemplate x:Key="TaskInfoDataTemplate">
        <Border  Name="TaskInfoWhite" HorizontalAlignment="Left" Height="30" Width="650"  Margin="-3,0,0,0" Background="{Binding ListColor,Converter={StaticResource BackgroundConverter}}" >
